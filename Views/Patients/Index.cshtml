@model IEnumerable<NLIH.Models.Patient>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@using (Html.BeginForm("Search","Patients",FormMethod.Get))
            {
                @Html.TextBox("searchtxt")<input type="submit" value="Search" />   
            }
<br />
<br />

@if (!Model.Any())
{
                <p>We do not have any such patients.</p>
}
else
{
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var patient in Model)
                        {
                    <tr>
                        <td>
                            @patient.Name
                        </td>
                        <td>@patient.Address</td>
                        <td>@patient.Email</td>
                    </tr>
                        }
                    </tbody>
                </table>
    }

